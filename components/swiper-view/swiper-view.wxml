<view class="page-section page-section-spacing swiper">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}">
    <block wx:for="{{menus}}" wx:key="*this">
      <swiper-item class="swiper-item">
        <block wx:for="{{item}}" wx:key="*this" wx:for-index="idx" wx:for-item="menu">
          <view class="box">
            <button class="./iconfont/{{ menu.icon }} swiper-button" bindtap='onTap'></button>
          </view>
        </block>
      </swiper-item>
    </block>
  </swiper>
</view>