/* components/swiper-view/swiper-view.wxss */
@import '/icon.wxss';
.swiper-box{
  height: 54vw;
}
.swiper{
  width: 96vw;
  margin: 0px auto 20rpx auto;
  border: rgb(221, 218, 218) 1rpx solid;
  border-radius: 10rpx; 
}
.swiper-item{
  width: 96vw;
  height: 85% !important;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.box{
  width: 24vw;
  height: 18vw;
  text-align: center;
}
.swiper-button{
  padding: 0px;
  margin: 2vw auto 0 auto;
  border: 1px solid rgb(231, 229, 229);
  border-radius: 1vw;
  width: 15vw;
  line-height: 15vw;
  height: 15vw;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(241, 239, 239)
}
.label{
  font-size: 25rpx;
}
