/* components/product-card/product-card.wxss */
.product-card{
  margin: 0rpx auto 20rpx auto;
  width: 90%;
  height: 40vw;
  padding: 5rpx 15rpx;
}
.card-desc{
  
  font-size: 23px;
  height: 25vw;
  width: 1%;
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}
.card-price{
  text-align: right
}
.left{
  display: inline-block;
  width: 40%;
  height: 40vw;
  overflow: hidden; 
}
.right{
  display: inline-block;
  width: 60%;
  height: 40vw;
  overflow: hidden; 
}
.product-card-image{
  width: 100%;
  height: 40vw;
  padding: 40rpx 1rpx;
}